			function offsetArray (arr,lie,val) {
				var cL = arr.length-1;
				var val = val?val:0;
				var lie = lie?lie:cL;
				if(arr.length <= 1){
					return arr.length === 1 ? [val,arr[0]]: (arr.length === 0 ? [val,val]: arr);
