<!doctype html>
<html>
<head>
	<% include statics/headers %>
	<title>Launch a challenge</title>
</head>
<body>

	<% include statics/navTop %>

	<div class="canvas">
		

		<div class="container">

			<div class="row">

				<div class="col-md-12">
					<h3>Challenges</h3>
					<div class="clearfix">
						The challenges are classed from the most valuated to the least one.
						<div class="pull-right filter">
							<input type="search" class="form-control" placeholder="Search a challenge">
						</div>	
					</div>
					<hr>
					<div class="row">
						<% for(var i=0; i< challenges.length; i++) { %>
						<div class="col-lg-4 col-xs-12 challenge-card hover-me animated fadeInDown" id="<%= challenges[i]._id %>" data-game="<%= challenges[i].game %>" data-durationD="<%= challenges[i].durationD %>" data-durationH="<%= challenges[i].durationH %>" data-title="<%= challenges[i].title %> " data-description="<%= challenges[i].description %>">								
							<div class="rounded-2 well">
								<h4><%= challenges[i].title %></h4>
								<% for(var z=0; z< challenges[z].completedBy.length; z++) { %>
								<%= challenges[i].completedBy[z] %>

								<% } %>
								<p><%= challenges[i].description %></p>
								<strong><small><%= challenges[i].game %></small></strong>
								<hr class="subtle-divider hr-white">
								<i class="fa fa-clock-o"></i>
								<strong><%= challenges[i].durationH %></strong> Hours
								<% if (challenges[i].durationD > 0 ) { %> 
								<strong><%= challenges[i].durationD %></strong> Days
								<% } %>
								<span class="pull-right">
									<span class="value-text"><%= challenges[i].value %></span>
								</span>
							</div>
						</div>
						<% } %>
					</div>
				</div>

				<hr>
			</div>

		</div>

		<% include statics/footers %>

		<script type="text/javascript">

			$(function() {
			});



		</script>
	</body>
	</html>